{
  "title": "SP â€” Host/System",
  "uid": "sp-host",
  "tags": ["sp","host"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "refresh": "5s",
  "time": { "from": "now-1h", "to": "now" },
  "links": [
    { "type": "dashboards", "asDropdown": true, "title": "SP Dashboards", "tags": ["sp"], "includeVars": true, "keepTime": true }
  ],
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "label": "Instance",
        "datasource": "Prometheus",
        "includeAll": true,
        "refresh": 2,
        "query": "label_values(system_cpu_usage, instance)"
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Host CPU (%)",
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "100 * avg_over_time(system_cpu_usage{instance=~\"$instance\"}[$__rate_interval])", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 }, "overrides": [] },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Load average (1m)",
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "system_load_average_1m{instance=~\"$instance\"}", "legendFormat": "{{instance}}" }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Disk used (%)",
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "100 * (1 - (disk_free_bytes{instance=~\"$instance\"} / disk_total_bytes{instance=~\"$instance\"}))", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 }, "overrides": [] },
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Open FDs (%)",
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "100 * (process_files_open_files{instance=~\"$instance\"} / process_files_max_files{instance=~\"$instance\"})", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 }, "overrides": [] },
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    }
  ]
}
