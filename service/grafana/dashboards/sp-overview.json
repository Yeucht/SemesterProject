{
  "title": "SP â€” Overview",
  "uid": "sp-overview",
  "tags": ["sp","overview"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "refresh": "5s",
  "time": { "from": "now-1h", "to": "now" },
  "links": [
    { "type": "dashboards", "asDropdown": true, "title": "SP Dashboards", "tags": ["sp"], "includeVars": true, "keepTime": true }
  ],
  "templating": {
    "list": [
      {
        "name": "instance",
        "label": "Instance",
        "type": "query",
        "datasource": "Prometheus",
        "includeAll": true,
        "refresh": 2,
        "query": "label_values(process_cpu_usage, instance)"
      },
      {
        "name": "pool",
        "label": "Hikari Pool",
        "type": "query",
        "datasource": "Prometheus",
        "includeAll": true,
        "refresh": 2,
        "query": "label_values(hikaricp_connections_max, pool)"
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU process (%)",
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "100 * avg_over_time(process_cpu_usage[$__rate_interval])", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 }, "overrides": [] },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Heap used (bytes)",
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "sum without (id) (jvm_memory_used_bytes{area=\"heap\",instance=~\"$instance\"})", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "RPS (req/s)",
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "sum by (instance) (rate(http_server_requests_seconds_count{instance=~\"$instance\"}[$__rate_interval]))", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" }, "overrides": [] },
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Latency avg (ms)",
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "1000 * (sum by (instance) (rate(http_server_requests_seconds_sum{instance=~\"$instance\"}[$__rate_interval])) / sum by (instance) (rate(http_server_requests_seconds_count{instance=~\"$instance\"}[$__rate_interval])))", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] },
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "HTTP 5xx rate (%)",
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "100 * (sum by (instance) (rate(http_server_requests_seconds_count{status=~\"5..\",instance=~\"$instance\"}[$__rate_interval])) / sum by (instance) (rate(http_server_requests_seconds_count{instance=~\"$instance\"}[$__rate_interval])))", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 }, "overrides": [] },
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Insert rate (/s)",
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "rate(spservice_inserted_so_far{instance=~\"$instance\"}[$__rate_interval])", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 }
    }
  ]
}
